<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP System</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
        .navbar-custom {
            background-color: #273F4F !important;
        }
        .navbar-brand, .nav-link {
            font-family: 'Montserrat', sans-serif !important;
            color: #ffffff !important;
        }
        .nav-link.active {
            font-weight: bold;
            text-decoration: underline;
        }
        .navbar-collapse {
            justify-content: flex-end !important;
        }
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand me-auto" href="@Url.Action("Dashboard", "Professor")">Professor Panel</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavProfessor"
                aria-controls="navbarNavProfessor" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavProfessor">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                       aria-current="page"
                       href="@Url.Action("Dashboard", "Professor")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Classes" ? "active" : "")"
                       href="@Url.Action("Classes", "Professor")">Classes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("LogOut", "Account")">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container mt-4">
    @RenderBody()
</div>

<!-- Bootstrap JS + Popper -->
@RenderSection("Scripts", required: false)

</body>
</html>